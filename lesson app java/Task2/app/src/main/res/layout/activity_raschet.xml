<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".raschet">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7F9F6D"
        android:ems="10"
        android:textColorHint="#68FFFFFF"
        android:fontFamily="@font/jirniy"
        android:hint="@string/hint_1"
        android:inputType="number"
        android:textColor="#68FFFFFF" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7F9F6D"
        android:ems="10"
        android:textColorHint="#68FFFFFF"
        android:fontFamily="@font/jirniy"
        android:inputType="number"
        android:hint="@string/hint_2"
        android:textColor="#68FFFFFF" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7F9F6D"
        android:ems="10"
        android:textColorHint="#68FFFFFF"
        android:fontFamily="@font/jirniy"
        android:inputType="number"
        android:hint="@string/hint_3"
        android:textColor="#68FFFFFF" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="181dp"
            android:layout_height="72dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="115dp"
            android:backgroundTint="#7F9F6D"
            android:fontFamily="@font/jirniy"
            android:text="РАССЧИТАТЬ"
            android:textColor="#EBDADADA"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="415dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/jirniy"
            android:text=""
            android:textColor="#68FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="415dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="150dp"
            android:fontFamily="@font/jirniy"
            android:text=""
            android:textColor="#68FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>