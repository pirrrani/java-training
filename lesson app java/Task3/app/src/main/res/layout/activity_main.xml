<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="172dp"
        android:fontFamily="@font/pixel"
        android:text="@string/main_string"
        android:textColor="@color/text"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/from_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/head"
        android:ems="10"
        android:textColor="@color/text"
        android:fontFamily="@font/pixel"
        android:hint="@string/from_hint"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#AEC6C6C6"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/to_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/head"
        android:ems="10"
        android:fontFamily="@font/pixel"
        android:hint="@string/to_hint"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/text"
        android:textColorHint="#AEC6C6C6"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_num" />
    <EditText
        android:id="@+id/del_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/head"
        android:ems="10"
        android:textColor="@color/text"
        android:fontFamily="@font/pixel"
        android:hint="@string/del_num_hint"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#AEC6C6C6"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_num" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="191dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#294E2B"
        android:fontFamily="@font/pixel"
        android:text="@string/start_button"
        android:textColor="@color/text"
        android:textSize="24sp"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/del_num" />

    <TextView
        android:id="@+id/res"
        android:layout_width="394dp"
        android:layout_height="216dp"
        android:scrollbars="vertical"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_button" />
</androidx.constraintlayout.widget.ConstraintLayout>